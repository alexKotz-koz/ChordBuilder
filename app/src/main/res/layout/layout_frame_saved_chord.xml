<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutFrameRecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewInstrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrument: "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewInstrumentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewChordName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chord Name: "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewChordNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewChordFingering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chord Fingering: "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewChordFingeringText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewChordNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chord Notes: "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewChordNoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>