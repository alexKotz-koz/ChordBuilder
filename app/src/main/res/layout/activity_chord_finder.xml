<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChordFinderActivity"
    android:background="#FFFFCC">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chord Finder" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Root" />

    <Spinner
        android:id="@+id/spinnerRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/notes_array"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Chord Quality" />

    <Spinner
        android:id="@+id/spinnerQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/quality_array"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCFSubmit"
        android:text="Submit"
        android:onClick="onClickSubmit"/>
</LinearLayout>