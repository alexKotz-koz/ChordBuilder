<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MetronomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelUserInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter BPM:"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editTextUserInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#302F2F"
            android:ems="10"
            android:inputType="number"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonStartMediaPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="tapMetronome"
        android:text="Tap"
        android:textColor="#FFFFFF"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp" />
</LinearLayout>