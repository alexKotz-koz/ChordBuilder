<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SavedChordSpecificActivityGuitar"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewLabelInstrumentGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrument: "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewSavedSpecificInstrumentGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLabelChordNameGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chord Name:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewSavedSpecificChordNameGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLabelChordFingeringGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chord Fingering:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewSavedSpecificChordFingeringGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLabelChordNotesGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chord Notes:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewSavedSpecificChordNotesGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dip"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listViewStringESavedGuitar"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </ListView>

        <ListView
            android:id="@+id/listViewStringASavedGuitar"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ListView
            android:id="@+id/listViewStringDSavedGuitar"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ListView
            android:id="@+id/listViewStringGSavedGuitar"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ListView
            android:id="@+id/listViewStringBSavedGuitar"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ListView
            android:id="@+id/listViewStringEhSavedGuitar"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>